{
  "id" : "io.github.kirukomaru11.Cardboard",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "master",
  "sdk" : "org.gnome.Platform",
  "command" : "cardboard",
  "cleanup" : "*",
  "modules" : [
    {
      "name" : "Cardboard",
      "buildsystem" : "simple",
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/kirukomaru11/AppUtils.git",
          "branch" : "main",
          "dest" : "AppUtils"
        },
        {
          "type" : "git",
          "url" : "https://github.com/kirukomaru11/Cardboard.git",
          "branch" : "main"
        }
      ],
      "build-commands" : [
        "bash AppUtils/AppInstall.sh"
      ]
    }
  ],
  "finish-args" : [
    "--device=dri",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=wayland"
  ]
}
